    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_analysis">

    <fragment
        android:id="@+id/navigation_analysis"
        android:name="com.ta.smile.ui.analysis.AnalysisFragment"
        android:label="@string/title_analysis"
        tools:layout="@layout/fragment_analysis" />

    <fragment
        android:id="@+id/navigation_history"
        android:name="com.ta.smile.ui.history.HistoryFragment"
        android:label="@string/title_history"
        tools:layout="@layout/fragment_history" />

    <fragment
        android:id="@+id/navigation_customer_service"
        android:name="com.ta.smile.ui.customerservice.CustomerServiceFragment"
        android:label="@string/title_cs"
        tools:layout="@layout/fragment_customer_service" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.ta.smile.ui.profile.ProfileFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_profile" />
