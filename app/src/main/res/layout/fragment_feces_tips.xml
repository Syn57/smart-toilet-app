<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.analysis.FecesTipsFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_lamp_urine"
            android:layout_width="40dp"
            android:layout_height="65dp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/lamp"/>
        <TextView
            android:id="@+id/tv_tips_feces_color"
            android:layout_width="310dp"
            android:textSize="14sp"
            android:layout_height="wrap_content"
            android:text="-"
            android:justificationMode="inter_word"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@id/iv_lamp_urine"
            app:layout_constraintStart_toStartOf="@id/iv_lamp_urine"
            app:layout_constraintEnd_toEndOf="@id/iv_lamp_urine"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tv_tips_feces_form"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="-"
            android:layout_width="310dp"
            android:justificationMode="inter_word"
            android:gravity="center"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="@id/tv_tips_feces_color"
            app:layout_constraintStart_toStartOf="@id/tv_tips_feces_color"
            app:layout_constraintTop_toBottomOf="@id/tv_tips_feces_color" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:text="-" />

        <TextView
            android:id="@+id/tv_no_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Belum ada data"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>