<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_logreg"
    tools:context=".ui.onboarding.RegisterFragment">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_logo_name"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/logo_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="400dp"
        android:fontFamily="@font/google_sans_bold"
        android:text="Sign Up"
        android:textColor="@color/blue_dark"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_logo_name" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_login"
            android:layout_width="364dp"
            android:layout_height="180dp"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="20dp"
            app:layout_constraintTop_toBottomOf="@id/tv_sign_up"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/iv_name_reg"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_name_log"
                    app:layout_constraintEnd_toStartOf="@id/til_name_reg"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/v_1"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_name_reg"
                    android:layout_width="300dp"
                    android:layout_marginTop="8dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    app:layout_constraintTop_toTopOf="@id/iv_name_reg"
                    app:layout_constraintBottom_toBottomOf="@id/iv_name_reg"
                    app:layout_constraintStart_toEndOf="@id/iv_name_reg"
                    app:layout_constraintEnd_toEndOf="parent"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:boxStrokeColor="@color/white"
                    app:boxStrokeWidth="0dp"
                    android:hint="Name">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edt_name_reg"
                        android:textSize="16sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </com.google.android.material.textfield.TextInputLayout>
                <View
                    android:id="@+id/v_1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/grey_line"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/v_2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>


                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/iv_email_reg"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_email_log"
                    app:layout_constraintTop_toBottomOf="@id/v_1"
                    app:layout_constraintStart_toStartOf="@id/iv_name_reg"
                    app:layout_constraintBottom_toTopOf="@id/v_2" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_email_reg"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="@id/iv_email_reg"
                    app:layout_constraintBottom_toBottomOf="@id/iv_email_reg"
                    app:layout_constraintStart_toStartOf="@id/til_name_reg"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:boxStrokeColor="@color/white"
                    app:boxStrokeWidth="0dp"
                    android:hint="Email">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edt_email_reg"
                        android:textSize="16sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </com.google.android.material.textfield.TextInputLayout>

                <View
                    android:id="@+id/v_2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/grey_line"
                    app:layout_constraintTop_toBottomOf="@id/v_1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/iv_pass_reg"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_pass_log"
                    app:layout_constraintTop_toBottomOf="@id/v_2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@id/iv_name_reg"
                    />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_pass_reg"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="@id/iv_pass_reg"
                    app:layout_constraintBottom_toBottomOf="@id/iv_pass_reg"
                    app:layout_constraintStart_toStartOf="@id/til_name_reg"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:boxStrokeColor="@color/white"
                    app:boxStrokeWidth="0dp"
                    android:hint="Password">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edt_pass_reg"
                        android:inputType="textPassword"
                        android:textSize="16sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </com.google.android.material.textfield.TextInputLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

    <Button
        android:id="@+id/btn_register"
        android:layout_width="360dp"
        android:layout_height="60dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/cv_login"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Register"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_have_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp"
        android:text="Already have account?"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/btn_register"
        app:layout_constraintEnd_toStartOf="@id/tv_login"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login here"
        android:layout_marginStart="4dp"
        android:textColor="@color/blue_dark"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_have_account"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_have_account" />


</androidx.constraintlayout.widget.ConstraintLayout>