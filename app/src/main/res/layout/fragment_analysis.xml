<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_bg"
    tools:context=".ui.analysis.AnalysisFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/abl_analysis"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_logo_name_analysis"
                android:layout_width="225dp"
                android:layout_height="wrap_content"
                android:src="@drawable/logo_name"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_tech_mini_left"
                android:layout_marginEnd="12dp"
                app:layout_constraintTop_toTopOf="@id/iv_logo_name_analysis"
                app:layout_constraintBottom_toBottomOf="@id/iv_logo_name_analysis"
                app:layout_constraintEnd_toStartOf="@id/iv_logo_name_analysis"/>
            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_tech_mini_right"
                android:layout_marginStart="12dp"
                app:layout_constraintTop_toTopOf="@id/iv_logo_name_analysis"
                app:layout_constraintBottom_toBottomOf="@id/iv_logo_name_analysis"
                app:layout_constraintStart_toEndOf="@id/iv_logo_name_analysis"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/refresh_layout_analysis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/abl_analysis">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_total_analysis"
                    android:layout_width="364dp"
                    android:layout_height="138dp"
                    android:layout_marginTop="24dp"
                    android:backgroundTint="@color/blue"
                    android:visibility="gone"
                    app:cardCornerRadius="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/iv_total_bg_analysis"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="12dp"
                            android:src="@drawable/ic_bg_total"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tv_total_analysis"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="28dp"
                            android:text="Total Analisis"
                            android:textColor="@color/blue"
                            app:layout_constraintBottom_toBottomOf="@id/iv_total_bg_analysis"
                            app:layout_constraintStart_toStartOf="@id/iv_total_bg_analysis"
                            app:layout_constraintTop_toTopOf="@id/iv_total_bg_analysis" />

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/iv_circle_total_feces_analysis"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="18dp"
                            android:layout_marginEnd="180dp"
                            android:src="@drawable/ic_circle_white"
                            app:layout_constraintEnd_toStartOf="@id/tv_total_urine_analysis"
                            app:layout_constraintHorizontal_chainStyle="packed"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/iv_total_bg_analysis" />

                        <TextView
                            android:id="@+id/tv_total_feces_analysis"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:textSize="20dp"
                            android:text="Feses"
                            android:textColor="@color/white"
                            app:layout_constraintBottom_toBottomOf="@id/iv_circle_total_feces_analysis"
                            app:layout_constraintStart_toEndOf="@id/iv_circle_total_feces_analysis"
                            app:layout_constraintTop_toTopOf="@id/iv_circle_total_feces_analysis" />

                        <TextView
                            android:id="@+id/tv_num_total_feces"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="17"
                            android:textSize="32sp"
                            app:layout_constraintBottom_toBottomOf="@id/iv_circle_total_feces_analysis"
                            app:layout_constraintEnd_toEndOf="@id/iv_circle_total_feces_analysis"
                            app:layout_constraintStart_toStartOf="@id/iv_circle_total_feces_analysis"
                            app:layout_constraintTop_toTopOf="@id/iv_circle_total_feces_analysis" />

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/iv_circle_total_urine_analysis"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="12dp"
                            android:src="@drawable/ic_circle_white"
                            app:layout_constraintBottom_toBottomOf="@id/iv_circle_total_feces_analysis"
                            app:layout_constraintEnd_toStartOf="@id/tv_total_urine_analysis"
                            app:layout_constraintTop_toTopOf="@id/iv_circle_total_feces_analysis" />


                        <TextView
                            android:id="@+id/tv_total_urine_analysis"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Urin"
                            android:textSize="20sp"
                            android:textColor="@color/white"
                            app:layout_constraintBottom_toBottomOf="@id/iv_circle_total_feces_analysis"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/iv_circle_total_feces_analysis"
                            app:layout_constraintTop_toTopOf="@id/iv_circle_total_feces_analysis" />

                        <TextView
                            android:id="@+id/tv_num_total_urine"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="57"
                            android:textSize="32sp"
                            app:layout_constraintBottom_toBottomOf="@id/iv_circle_total_urine_analysis"
                            app:layout_constraintEnd_toEndOf="@id/iv_circle_total_urine_analysis"
                            app:layout_constraintStart_toStartOf="@id/iv_circle_total_urine_analysis"
                            app:layout_constraintTop_toTopOf="@id/iv_circle_total_urine_analysis" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/iv_dot_feces"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginTop="24dp"
                    android:src="@drawable/ic_circle"
                    android:layout_marginStart="24dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cv_total_analysis" />

                <TextView
                    android:id="@+id/tv_feces_subtitle_analysis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="Hasil Analisis Feses"
                    android:textSize="18sp"
                    android:textColor="@color/blue"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@id/iv_dot_feces"
                    app:layout_constraintStart_toEndOf="@id/iv_dot_feces"
                    app:layout_constraintTop_toTopOf="@id/iv_dot_feces" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_feces"
                    android:layout_width="362dp"
                    android:layout_height="413dp"
                    android:layout_marginTop="18dp"
                    app:cardBackgroundColor="@color/blue"
                    app:cardCornerRadius="28dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_feces_subtitle_analysis">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/tv_date_updated"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:text="Last updated: -"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="390dp"
                            app:cardCornerRadius="5dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <!--                    <include layout="@layout/contain_main"/>-->
                                <com.google.android.material.tabs.TabLayout
                                    android:id="@+id/tab_layout_feces"
                                    android:layout_width="140dp"
                                    android:layout_height="25dp"
                                    android:layout_marginTop="8dp"
                                    android:background="@drawable/bg_tabs"
                                    android:scrollbarSize="@dimen/material_emphasis_high_type"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:tabGravity="fill"
                                    app:tabIndicator="@drawable/bg_select"
                                    app:tabIndicatorAnimationDuration="200"
                                    app:tabIndicatorAnimationMode="elastic"
                                    app:tabIndicatorColor="@color/blue"
                                    app:tabIndicatorGravity="stretch"
                                    app:tabMode="fixed"
                                    app:tabSelectedTextColor="@color/white"
                                    app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
                                    app:tabTextColor="@color/grey" />

                                <androidx.viewpager2.widget.ViewPager2
                                    android:id="@+id/view_pager_feces"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="35dp">

                                </androidx.viewpager2.widget.ViewPager2>

                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </androidx.cardview.widget.CardView>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tv_urine_subtitle_analysis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="Hasil Analisis Urin"
                    android:textColor="@color/blue"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="@id/iv_dot_urine"
                    app:layout_constraintStart_toEndOf="@id/iv_dot_urine"
                    app:layout_constraintTop_toTopOf="@id/iv_dot_urine" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/iv_dot_urine"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginTop="24dp"
                    android:src="@drawable/ic_circle"
                    android:layout_marginStart="24dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cv_feces" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_urine"
                    android:layout_width="362dp"
                    android:layout_height="225dp"
                    android:layout_marginTop="18dp"
                    app:cardBackgroundColor="@color/blue"
                    app:cardCornerRadius="28dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_urine_subtitle_analysis">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/tv_date_updated_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:fontFamily="@font/google_sans_light"
                            android:text="Last updated: -"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            app:cardCornerRadius="5dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <com.google.android.material.tabs.TabLayout
                                    android:id="@+id/tab_layout_urine"
                                    android:layout_width="140dp"
                                    android:layout_height="25dp"
                                    android:layout_marginTop="8dp"
                                    android:background="@drawable/bg_tabs"
                                    android:scrollbarSize="@dimen/material_emphasis_high_type"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:tabGravity="fill"
                                    app:tabIndicator="@drawable/bg_select"
                                    app:tabIndicatorAnimationDuration="200"
                                    app:tabIndicatorAnimationMode="elastic"
                                    app:tabIndicatorColor="@color/blue"
                                    app:tabIndicatorGravity="stretch"
                                    app:tabMode="fixed"
                                    app:tabSelectedTextColor="@color/white"
                                    app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
                                    app:tabTextColor="@color/grey" />

                                <androidx.viewpager2.widget.ViewPager2
                                    android:id="@+id/view_pager_urine"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="35dp">

                                </androidx.viewpager2.widget.ViewPager2>
                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </androidx.cardview.widget.CardView>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:visibility="gone"
                    android:layout_marginTop="8dp"
                    android:background="@color/grey_line"
                    app:layout_constraintTop_toBottomOf="@id/cv_urine"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>



            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</androidx.constraintlayout.widget.ConstraintLayout>