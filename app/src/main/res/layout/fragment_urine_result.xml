        <!--            app:layout_constraintStart_toStartOf="@+id/pc_result_urine"-->
        <!--            app:layout_constraintTop_toTopOf="@+id/pc_result_urine" />-->

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pc_result_urine"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_marginTop="12dp"
            android:isScrollContainer="false"
            android:layoutMode="opticalBounds"
            android:outlineProvider="background"
            android:visibility="gone"
            app:layout_constraintEnd_toStartOf="@id/tv_urine_color_desc"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

<!-- vivo margin top 24-->
        <TextView
            android:id="@+id/tv_urine_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Warna Urin"
            android:textColor="@color/blue"
            android:textSize="16sp"
            android:layout_marginTop="24dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/tv_urine_color_desc"
            app:layout_constraintStart_toStartOf="@id/tv_urine_color_desc"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/tv_urine_color_desc"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/google_sans_light"
            android:justificationMode="inter_word"
            android:text="@string/lorem"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_dominant_color"
            app:layout_constraintTop_toBottomOf="@id/tv_urine_color" />

        <TextView
            android:id="@+id/text_test"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="21dp"
            android:gravity="center"
            android:text="ini feces result"
            android:textSize="50sp"
            android:visibility="gone" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_dominant_color"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginTop="12dp"
            android:src="@color/brown_feces"
            app:layout_constraintEnd_toStartOf="@id/tv_urine_color_desc"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_urine_color"
            app:shapeAppearanceOverlay="@style/customRoundedImageView" />

        <TextView
            android:id="@+id/tv_dominant_color_urine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Coklat"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@id/iv_dominant_color"
            app:layout_constraintStart_toStartOf="@+id/iv_dominant_color"
            app:layout_constraintTop_toBottomOf="@id/iv_dominant_color" />

        <TextView
            android:id="@+id/tv_no_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Belum ada data"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>